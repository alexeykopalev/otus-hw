global
    maxconn 100
defaults
    log global
    mode tcp
    retries 2
    timeout client 30m
    timeout connect 4s
    timeout server 30m
    timeout check 5s

listen stats
    mode http
    bind *:7000
    stats enable
    stats uri /

listen postgres
    bind *:6432
    option httpchk OPTIONS /master
    http-check expect status 200
    default-server inter 3s fall 3 rise 2 on-marked-down shutdown-sessions
    server db-host1 db-host1:5432 maxconn 100 check port 8008
    server db-host2 db-host2:5432 maxconn 100 check port 8008
    server db-host3 db-host3:5432 maxconn 100 check port 8008